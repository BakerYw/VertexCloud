<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/public_top_title" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_75"
        android:src="@mipmap/ic_app_logo" />

    <com.vertex.cloud.app.view.ClearEditText
        android:id="@+id/login_ed_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_70"
        android:layout_marginRight="@dimen/dp_25"
        android:background="@null"
        android:drawableLeft="@mipmap/ic_login_user"
        android:drawablePadding="@dimen/dp_10"
        android:hint="请输入手机号"
        android:inputType="number"
        android:maxLines="1"
        android:maxLength="11"
        android:textColorHint="@color/colorBlack9"
        android:textSize="@dimen/sp_16" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_25"
        android:background="@color/colorBorder"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_25"
        android:orientation="horizontal">

        <com.vertex.cloud.app.view.ClearEditText
            android:id="@+id/login_ed_pwd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawableLeft="@mipmap/ic_login_pwd"
            android:drawablePadding="@dimen/dp_10"
            android:hint="请输入登录密码"
            android:inputType="textPassword"
            android:lines="1"
            android:textColorHint="@color/colorBlack9"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:id="@+id/login_iv_eye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@mipmap/ic_eye" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_25"
        android:background="@color/colorBorder"
        android:orientation="vertical" />

    <Button
        android:id="@+id/login_btn_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_60"
        android:layout_marginRight="@dimen/dp_25"
        android:background="@drawable/selector_btn_round_bg"
        android:clickable="true"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/login_tv_sms_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_20"
        android:text="短信验证码登录"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/login_tv_forget_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_20"
        android:text="忘记密码？"
        android:textColor="@color/colorBlack9"
        android:textSize="@dimen/sp_12" />


</LinearLayout>