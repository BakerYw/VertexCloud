<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/public_top_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorBorder"
        android:orientation="vertical" />

    <com.vertex.cloud.app.view.ClearEditText
        android:id="@+id/forget_ed_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_25"
        android:background="@null"
        android:drawableLeft="@mipmap/ic_login_user"
        android:drawablePadding="@dimen/dp_10"
        android:hint="请输入手机号"
        android:maxLength="11"
        android:inputType="number"
        android:maxLines="1"
        android:textColorHint="@color/colorBlack9"
        android:textSize="@dimen/sp_16" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_25"
        android:background="@color/colorBorder"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_25"
        android:orientation="horizontal">

        <com.vertex.cloud.app.view.ClearEditText
            android:id="@+id/forget_ed_pwd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawableLeft="@mipmap/ic_login_pwd"
            android:drawablePadding="@dimen/dp_10"
            android:hint="请输入8-16位新密码"
            android:inputType="textPassword"
            android:lines="1"
            android:textColorHint="@color/colorBlack9"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:id="@+id/forget_iv_eye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@mipmap/ic_eye" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_25"
        android:background="@color/colorBorder"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_25"
        android:orientation="horizontal">

        <com.vertex.cloud.app.view.ClearEditText
            android:id="@+id/forget_ed_sms_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawableLeft="@mipmap/ic_smd_code"
            android:drawablePadding="@dimen/dp_10"
            android:hint="短信验证码"
            android:inputType="number"
            android:lines="1"
            android:textColorHint="@color/colorBlack9"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/forget_tv_get_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:background="@drawable/shape_white_15"
            android:paddingLeft="@dimen/dp_15"
            android:paddingTop="@dimen/dp_8"
            android:paddingRight="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_8"
            android:text="获取验证码"
            android:textColor="@color/colorBlack6"
            android:textSize="@dimen/sp_10" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_25"
        android:background="@color/colorBorder"
        android:orientation="vertical" />

    <Button
        android:id="@+id/forget_btn_sure"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_60"
        android:layout_marginRight="@dimen/dp_25"
        android:background="@drawable/selector_btn_round_bg"
        android:clickable="true"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/sp_16" />


</LinearLayout>